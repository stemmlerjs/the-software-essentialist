{
  "manifest_version": 3,
  "name": "Chrome Speech to Text",
  "version": "1.0",
  "description": "A Chrome extension that converts speech to text.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "public/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
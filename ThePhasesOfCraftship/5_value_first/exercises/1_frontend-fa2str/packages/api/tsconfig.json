{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "declaration": true,
    "emitDeclarationOnly": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
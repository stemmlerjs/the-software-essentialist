{
  "name": "@dddforum/database",
  "version": "1.0.0",
  "description": "The database for dddforum",
  "main": "index.js",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "generate": "ts-node scripts/generatePrisma.ts",
    "migrate": "ts-node scripts/migratePrisma.ts",
    "db:seed": "ts-node prepareEnv.ts prisma db seed --schema=./src/prisma/schema.prisma",
    "db:reset": "ts-node prepareEnv.ts prisma migrate reset --preview-feature --schema src/prisma/schema.prisma && npm run migrate && npm run generate"
  },
  "prisma": {
    "seed": "ts-node ./src/shared/database/prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dddforum/config": "*",
    "@prisma/client": "6.4.1"
  },
  "devDependencies": {
    "prisma": "6.4.1"
  }
}

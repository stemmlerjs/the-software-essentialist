{
  "name": "@dddforum/backend",
  "version": "1.0.0",
  "description": "The backend for dddforum",
  "main": "index.js",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "start:dev": "npx nodemon",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:e2e": "jest -c jest.config.e2e.ts",
    "test:e2e:dev": "jest -c jest.config.e2e.ts --watch",
    "test:infra": "jest -c jest.config.infra.ts",
    "test:infra:dev": "jest -c jest.config.infra.ts --watch",
    "test:unit": "jest -c jest.config.unit.ts",
    "test:unit:dev": "jest -c jest.config.unit.ts --watchAll",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "prisma": {
    "seed": "ts-node ./src/shared/database/prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^2.0.19",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "@dddforum/api": "*",
    "@dddforum/bus": "*",
    "@dddforum/config": "*",
    "@dddforum/core": "*",
    "@dddforum/database": "*",
    "@dddforum/errors": "*",
    "@dddforum/outbox": "*",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "firebase": "^11.3.1",
    "firebase-admin": "^13.1.0",
    "jwks-rsa": "^3.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
